@model IEnumerable<Employee>

@{
    ViewBag.Title = "Index title";    
}

<div class="card-deck">
    @foreach (var item in Model)
    {
        var photoPath = "~/Images/" + (item.PhotoPath ?? "1.jpg");

        <div class="card m-3" style="min-width: 18rem; max-height: 30.5%">
            <div class="card-header">
                <h3>@item.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary m-1">Show</a> 
                <a asp-controller="home" asp-action="edit" asp-route-id="@item.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="home" asp-action="delete" asp-route-id="@item.Id" class="btn btn-primary m-1">Delete</a>
            </div>
        </div>

    }

</div>