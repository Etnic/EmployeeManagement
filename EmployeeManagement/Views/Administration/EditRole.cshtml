@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="card mb-3">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">ID</label>
            <div class="card-header">
                Role Id : @Model.Id
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.RoleName" class="form-control" placeholder="Name">
                <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="Cancel" asp-controller="administration" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>

        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="administration" asp-route-roleName="@Model.RoleName" class="btn btn-primary" style="width:auto">Add Or Remove User from this role</a>
        </div>
    </div>
</form>

